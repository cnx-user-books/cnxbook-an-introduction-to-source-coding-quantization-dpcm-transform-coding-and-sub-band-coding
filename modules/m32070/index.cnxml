                    <m:mtd columnalign="left">
                      <m:mrow>
                        <m:mfenced separators="" open="(" close=")">
                          <m:mi>Q</m:mi>
                          <m:mo>(</m:mo>
                          <m:mi>z</m:mi>
                          <m:mo>)</m:mo>
                          <m:mo>+</m:mo>
                          <m:mi>E</m:mi>
                          <m:mo>(</m:mo>
                          <m:mi>z</m:mi>
                          <m:mo>)</m:mo>
                        </m:mfenced>
                        <m:mo>+</m:mo>
                        <m:mo>(</m:mo>
                        <m:mi>X</m:mi>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>z</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                        <m:mo>-</m:mo>
                        <m:mi>E</m:mi>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>z</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                        <m:mo>)</m:mo>
                        
                        <m:mo>=</m:mo>
                        
                        <m:mi>X</m:mi>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>z</m:mi>
                          <m:mo>)</m:mo>
