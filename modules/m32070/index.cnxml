                    </m:mtd>
                  </m:mtr>
                  <m:mtr>
                    <m:mtd columnalign="right">
                      <m:mrow>
                        <m:mover accent="true">
                          <m:mi>x</m:mi>
                          <m:mo>˜</m:mo>
                        </m:mover>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>n</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
