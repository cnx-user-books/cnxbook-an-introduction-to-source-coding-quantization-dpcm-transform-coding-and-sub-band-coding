            <equation id="id332163">
              <m:math overflow="scroll" mode="display">
                <m:mtable displaystyle="true">
                  <m:mtr>
                    <m:mtd columnalign="right">
                      <m:mrow>
                        <m:mi>Y</m:mi>
                        <m:mo>(</m:mo>
                        <m:mi>z</m:mi>
                        <m:mo>)</m:mo>
                      </m:mrow>
                    </m:mtd>
                    <m:mtd>
                      <m:mo>=</m:mo>
                    </m:mtd>
                    <m:mtd columnalign="left">
                      <m:mrow>
                        <m:mfrac>
                          <m:mrow>
                            <m:mi>X</m:mi>
                            <m:mrow>
                              <m:mo>(</m:mo>
                              <m:mi>z</m:mi>
