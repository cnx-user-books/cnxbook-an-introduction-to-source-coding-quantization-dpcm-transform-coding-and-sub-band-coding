                  </m:mtr>
                  <m:mtr>
                    <m:mtd columnalign="right">
                      <m:mrow>
                        <m:mover accent="true">
                          <m:mi>X</m:mi>
                          <m:mo>˜</m:mo>
                        </m:mover>
                        <m:mrow>
